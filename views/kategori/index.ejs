<!DOCTYPE html>
<html>
  <head>
    <title>Kategori</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <% if (messages && messages.success) { %>
        <div class="alert alert-info">
          <%= messages.success %>
        </div>
      <% } %>
      <a href="/kategori/create" class="btn btn-primary btn-sm btn-success">Tambah</a>
      <div class="row">
        <div class="col">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nama</th>
                <th colspan="2" scope="col">Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i<data.length; i++){ %>
              <tr>
                <th scope="row"><%= (i+1) %></th>
                <td><%= data[i].nama %></td>
                <td>
                  <a href="/kategori/edit/<%= data[i].id %>" class="btn btn-sm btn-warning">Edit</a>
                  <a href="/kategori/delete/<%= data[i].id %>" class="btn btn-sm btn-danger">Hapus</a>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
